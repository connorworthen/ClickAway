<div class="col-md-4 text-center">
  <h2>Update or Delete a Manufacturer</h2>

  <%= form_with(model: @manufacturer, local: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :established %>
  <%= f.number_field :established, step: 2020 %><br><br>

  <%= f.label :bio %>
  <%= f.text_area :bio, :cols => 50, :rows => 5 %><br><br>

  <%= f.submit "Update Manufacturer Profile" %> || <button><%= link_to 'Delete Manufacturer Profile', manufacturers_path, :method => :delete, data: {:confirm => "Are you sure?" } %></button>

  <% end %>

</div>