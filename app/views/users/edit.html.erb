<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(current_user) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <h4>By saving changes, you are now a manufacturer</h4>
    <%= link_to  "Become Manufacturer", become_manufacturer_users_path %>

    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>